{
  "name": "vaad-chat-app",
  "version": "1.0.0",
  "engines": {
    "node": "16.15.1",
    "npm": "8.11.0"
  },
  "description": "A Full Stack Chatting application made using MERN, Chakra Ui and Socket.io",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build:client": "npm install --prefix client && npm run build --prefix client",
    "build": "npm install && npm run build:client "
  },
  "author": "Bhavya Wahie",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.29.1",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^12.0.3",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.6",
    "morgan": "^1.10.0",
    "react-router-dom": "^5.3.0",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15"
  }
}
